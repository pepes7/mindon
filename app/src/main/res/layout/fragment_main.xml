<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/viewChooseGame"
            android:layout_width="150dp"
            android:layout_height="390dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="137dp" />

        <Button
            android:id="@+id/buttonMemory"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/viewChooseGame"
            android:layout_alignLeft="@+id/viewChooseGame"
            android:layout_alignTop="@+id/viewChooseGame"
            android:layout_alignEnd="@+id/viewChooseGame"
            android:layout_alignRight="@+id/viewChooseGame"
            android:layout_marginBottom="5dp"
            android:text="@string/buttonMemory"
            android:fontFamily="@font/luckiest_guy"
            android:textColor="@color/almostWhite"
            android:textSize="24sp"
            android:background="@drawable/background_home_game_buttons"/>

        <Button
            android:id="@+id/buttonLabrinth"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonMemory"
            android:layout_alignStart="@+id/viewChooseGame"
            android:layout_alignLeft="@+id/viewChooseGame"
            android:layout_alignEnd="@+id/viewChooseGame"
            android:layout_alignRight="@+id/viewChooseGame"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_home_game_buttons"
            android:fontFamily="@font/luckiest_guy"
            android:text="@string/buttonLabrinth"
            android:textColor="@color/almostWhite"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonMusic"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonLabrinth"
            android:layout_alignStart="@+id/viewChooseGame"
            android:layout_alignLeft="@+id/viewChooseGame"
            android:layout_alignEnd="@+id/viewChooseGame"
            android:layout_alignRight="@+id/viewChooseGame"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/buttonMusic"
            android:fontFamily="@font/luckiest_guy"
            android:textColor="@color/almostWhite"
            android:textSize="24sp"
            android:background="@drawable/background_home_game_buttons"/>

        <Button
            android:id="@+id/buttonUndef"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonMusic"
            android:layout_alignStart="@+id/viewChooseGame"
            android:layout_alignLeft="@+id/viewChooseGame"
            android:layout_alignEnd="@+id/viewChooseGame"
            android:layout_alignRight="@+id/viewChooseGame"
            android:layout_alignBottom="@+id/viewChooseGame"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:text="@string/buttonUndef"
            android:fontFamily="@font/luckiest_guy"
            android:textColor="@color/almostWhite"
            android:textSize="24sp"
            android:background="@drawable/background_home_game_buttons"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-100dp"
            android:layout_marginLeft="-100dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="150dp"
            android:layout_toEndOf="@+id/viewChooseGame"
            android:layout_toRightOf="@+id/viewChooseGame"
            android:src="@drawable/macaco_pulando"
            android:contentDescription="@string/CharacterImgDesc" />


    </RelativeLayout>

</FrameLayout>