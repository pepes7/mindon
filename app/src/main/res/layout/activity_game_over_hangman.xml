<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GameOverHangman"
    android:background="@color/nightBlue">

    <TextView
        android:id="@+id/gameOverTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/luckiest_guy"
        android:text="Game Over!"
        android:textColor="@color/lyricsHangman"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actualScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/luckiest_guy"
        android:text="Score: "
        android:textColor="@color/lyricsHangman"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameOverTitle"
        app:layout_constraintBottom_toTopOf="@+id/buttonReturnToMenu"/>


    <Button
        android:id="@+id/buttonTryAgain"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/hangman_menu_buttons"
        android:fontFamily="@font/luckiest_guy"
        android:text="Try Again"
        android:textColor="@color/lyricsHangman"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/buttonReturnToMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actualScore"
        android:layout_marginBottom="40dp"
        />

    <Button
    android:id="@+id/buttonReturnToMenu"
    android:layout_width="250dp"
    android:layout_height="80dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/hangman_menu_buttons"
    android:fontFamily="@font/luckiest_guy"
    android:text="Return to Menu"
    android:textColor="@color/lyricsHangman"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonTryAgain"
    android:layout_marginBottom="40dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>